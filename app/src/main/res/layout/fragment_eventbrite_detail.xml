<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="event"
            type="com.fomono.fomono.models.events.events.Event" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/tvEventMonth"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="MAY"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/red"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/tvEventDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="10"
                    android:layout_below="@id/tvEventMonth"
                    android:textColor="@color/twitterBlue"
                    android:textSize="20sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_weight="4.5"
                android:text='@{event.name.text ?? ""}'
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/spView00"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/llHeader"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginStart="-10dp"
            android:background="@color/colorGrey" />


        <ImageButton
            android:id="@+id/ivFavoriteIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/spView00"
            android:layout_centerHorizontal="true"
            android:background="@color/colorWhite"
            app:srcCompat="@drawable/ic_favorite_grey" />

        <TextView
            android:id="@+id/tvFavoriteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivFavoriteIcon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Favorite"
            android:textSize="10dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/spView0"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_below="@id/tvFavoriteLabel"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGrey" />


        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFavoriteLabel"
            android:layout_marginStart="3dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold|italic" />


        <com.fomono.fomono.supportclasses.ExpandableTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvCategory"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />

        <View
            android:id="@+id/spView01"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/tvDescription"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginStart="-10dp"
            android:background="@color/colorGrey" />

        <ImageView
            android:id="@+id/ivClockIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/spView01"
            android:layout_marginRight="2dp"
            app:srcCompat="@drawable/ic_clock" />

        <TextView
            android:id="@+id/tvClockEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivClockIcon"
            android:layout_below="@id/spView01"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/ivClockIcon"
            android:text=''
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/ivCalendar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/spView01"
            android:layout_toRightOf="@id/tvClockEventDate"
            app:srcCompat="@drawable/ic_date_range" />

        <TextView
            android:id="@+id/tvCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivClockIcon"
            android:layout_below="@id/spView01"
            android:layout_toRightOf="@id/ivCalendar"
            android:clickable="true"
            android:text="Add to Calendar"
            android:textColor="@color/twitterBlue"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/ivLocationIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ivClockIcon"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_location_pin" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivLocationIcon"
            android:layout_below="@id/ivClockIcon"
            android:layout_toRightOf="@id/ivLocationIcon"
            android:text=''
            android:textColor="@color/black"
            android:textSize="13sp" />

        <View
            android:id="@+id/spView02"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/tvLocation"
            android:layout_marginEnd="-10dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorGrey" />


        <TextView
            android:id="@+id/tvSiteLinkLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/spView02"
            android:layout_marginTop="20dp"
            android:text="Go to the Event Site "
            android:textColor="@color/black"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/ivSiteLink"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/tvSiteLinkLabel"
            android:layout_below="@id/spView02"
            android:layout_toEndOf="@id/tvSiteLinkLabel"
            android:clickable="true"
            app:srcCompat="@drawable/ic_globe" />


        <LinearLayout
            android:id="@+id/llShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSiteLinkLabel"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvShareLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:text="SHARE: "
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/ivFBShareIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_facebook" />


            <ImageView
                android:id="@+id/ivTwitterShareIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_twitter" />


            <ImageView
                android:id="@+id/ivEmailShareIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_email" />

            <ImageView
                android:id="@+id/ivMessageShareIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_whatsapp" />
        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapEBView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/llShare"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp" />


    </RelativeLayout>
</layout>
