<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movie"
            type="com.fomono.fomono.models.movies.Movie" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="May 10"
            android:textColor="@color/twitterBlue"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvEventDate"
            android:text='@{movie.title}'
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivEventImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvEventDate"
            android:layout_below="@id/tvEventDate"
            app:srcCompat="@drawable/botaimage" />


        <ImageButton
            android:id="@+id/ivFavoriteIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/ivEventImage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            app:srcCompat="@drawable/ic_favorite_grey" />

        <TextView
            android:id="@+id/tvFavoriteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ivFavoriteIcon"
            android:layout_below="@id/ivFavoriteIcon"
            android:text="Favorite"
            android:textSize="10dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/ivYesIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/ivEventImage"
            android:layout_marginRight="80dp"
            android:layout_toRightOf="@id/ivFavoriteIcon"
            app:srcCompat="@drawable/ic_yes" />

        <TextView
            android:id="@+id/tvYesLabel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ivYesIcon"
            android:layout_below="@id/ivYesIcon"
            android:text="Interested/Going"
            android:textSize="10dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/ivNoIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/ivEventImage"
            android:layout_marginRight="80dp"
            android:layout_toRightOf="@id/ivYesIcon"
            app:srcCompat="@drawable/ic_no" />

        <TextView
            android:id="@+id/tvNoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ivNoIcon"
            android:layout_below="@id/ivNoIcon"
            android:text="Not Interested"
            android:textSize="10dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvFavoriteLabel"
            android:layout_marginTop="15dp"
            android:text='@{movie.overview}'
            android:textSize="13sp" />


        <RatingBar
            android:id="@+id/rbMovierating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:stepSize="0.3"
            android:layout_below="@id/tvDescription"
            android:theme="@style/RatingBar"
            />

        <TextView
            android:id="@+id/tvRatingText"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/rbMovierating"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_below="@id/tvDescription" />

        <ImageView
            android:id="@+id/ivClockIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/rbMovierating"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_clock" />

        <TextView
            android:id="@+id/tvClockEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivClockIcon"
            android:layout_below="@id/rbMovierating"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/ivClockIcon"
            android:text='@{"In Theatres: " + movie.releaseDate }'
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvClockCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivClockIcon"
            android:layout_below="@id/tvRatingText"
            android:layout_toRightOf="@id/tvClockEventDate"
            android:clickable="true"
            android:text="ADD TO CALENDAR"
            android:textColor="@color/twitterBlue"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvGenresLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivClockIcon"
            android:layout_marginTop="10dp"
            android:text="Genre(s): "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvGenres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivClockIcon"
            android:layout_toRightOf="@id/tvGenresLabel"
            android:layout_alignTop="@id/tvGenresLabel"
            android:text="N/A"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvAdultLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGenresLabel"
            android:layout_marginTop="10dp"
            android:text="Adult Only: "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvAdult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGenresLabel"
            android:layout_toRightOf="@id/tvAdultLabel"
            android:layout_alignTop="@id/tvAdultLabel"
            android:text="N/A"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvLanguageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAdultLabel"
            android:layout_marginTop="10dp"
            android:text="Original Language:  "
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAdultLabel"
            android:layout_toRightOf="@id/tvLanguageLabel"
            android:layout_alignTop="@id/tvLanguageLabel"
            android:text='@{movie.originalLanguage }'
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvSiteLinkLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvLanguageLabel"
            android:layout_marginTop="20dp"
            android:text="Go to the Site: "
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvSiteLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvSiteLinkLabel"
            android:layout_below="@id/tvLanguageLabel"
            android:layout_toRightOf="@id/tvSiteLinkLabel"
            android:clickable="true"
            android:text="CLICK HERE"
            android:textColor="@color/twitterBlue"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvShareLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvSiteLinkLabel"
            android:layout_marginTop="20dp"
            android:text="SHARE: "
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/ivFBShareIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/tvSiteLink"
            android:layout_below="@id/tvSiteLink"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/tvShareLabel"
            app:srcCompat="@drawable/ic_facebook" />


        <ImageView
            android:id="@+id/ivTwitterShareIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/ivFBShareIcon"
            android:layout_below="@id/tvSiteLink"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/ivFBShareIcon"

            app:srcCompat="@drawable/ic_twitter" />


        <ImageView
            android:id="@+id/ivEmailShareIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/ivFBShareIcon"
            android:layout_below="@id/tvSiteLink"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/ivTwitterShareIcon"
            app:srcCompat="@drawable/ic_email" />

        <ImageView
            android:id="@+id/ivMessageShareIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/ivFBShareIcon"
            android:layout_below="@id/tvSiteLink"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/ivEmailShareIcon"
            app:srcCompat="@drawable/ic_whatsapp" />


    </RelativeLayout>
</layout>
