<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movie"
            type="com.fomono.fomono.models.movies.Movie" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="@color/twitterBlue"
            android:text="May 10"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvEventDate"
            android:text="Ffty shades of Crazy"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivEventImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignLeft="@id/tvEventDate"
            android:layout_below="@id/tvEventDate"
            app:srcCompat="@drawable/botaimage" />


        <ImageView
            android:id="@+id/ivFavoriteIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/ivEventImage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            app:srcCompat="@drawable/ic_favorite" />

        <TextView
            android:id="@+id/tvFavoriteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ivFavoriteIcon"
            android:text="Favorite"
            android:textStyle="bold"
            android:layout_below="@id/ivFavoriteIcon"
            android:textSize="10dp"
            />


        <ImageView
            android:id="@+id/ivYesIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/ivEventImage"
            android:layout_marginRight="80dp"
            android:layout_toRightOf="@id/ivFavoriteIcon"
            app:srcCompat="@drawable/ic_yes" />

        <TextView
            android:id="@+id/tvYesLabel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivYesIcon"
            android:textStyle="bold"
            android:layout_alignLeft="@id/ivYesIcon"
            android:text="Interested/Going"
            android:textSize="10dp"
            />


        <ImageView
            android:id="@+id/ivNoIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/ivEventImage"
            android:layout_marginRight="80dp"
            android:layout_toRightOf="@id/ivYesIcon"
            app:srcCompat="@drawable/ic_no" />

        <TextView
            android:id="@+id/tvNoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNoIcon"
            android:layout_alignLeft="@id/ivNoIcon"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="Not Interested" />


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvFavoriteLabel"
            android:text="Come experience the biggest plant sale in the bay area.blah blah blah blah blah blah blah blah........................................................"
            android:textSize="12dp" />


        <ImageView
            android:id="@+id/ivClockIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvDescription"
            app:srcCompat="@drawable/ic_clock" />

        <TextView
            android:id="@+id/tvClockEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivClockIcon"
            android:layout_alignTop="@id/ivClockIcon"
            android:layout_below="@id/tvDescription"
            android:layout_marginRight="5dp"
            android:textSize="10dp"
            android:text=" May 6, 2017 at 10:30 PM"
            />

        <TextView
            android:id="@+id/tvClockCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvClockEventDate"
            android:layout_alignTop="@id/ivClockIcon"
            android:layout_below="@id/tvDescription"
            android:textSize="10dp"
            android:textColor="@color/twitterBlue"
            android:clickable="true"
            android:text="ADD TO CALENDAR"
            />


        <ImageView
            android:id="@+id/ivLocationIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/ivClockIcon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_location_pin" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivLocationIcon"
            android:layout_below="@id/ivClockIcon"
            android:layout_alignTop="@id/ivLocationIcon"
            android:text="Golden Gate Park, San Francisco, CA"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tvSiteLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivLocationIcon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:text="Go to the Site: "
            android:textColor="@color/black"
            android:textSize="10dp" />


        <ImageView
            android:id="@+id/ivSiteLink"
            android:layout_width="90dp"
            android:layout_height="10dp"
            android:layout_alignTop="@id/tvSiteLink"
            android:layout_below="@id/ivLocationIcon"
            android:layout_toRightOf="@id/tvSiteLink"
            app:srcCompat="@drawable/event_brite_cut" />


        <TextView
            android:id="@+id/tvShareLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivSiteLink"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:text="SHARE: "
            android:textSize="10dp" />



        <ImageView
            android:id="@+id/ivFBShareIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/ivSiteLink"
            android:layout_toRightOf="@id/tvShareLabel"
            android:layout_alignTop="@id/ivSiteLink"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_facebook" />


        <ImageView
            android:id="@+id/ivTwitterShareIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/ivFBShareIcon"
            android:layout_below="@id/ivSiteLink"
            android:layout_toRightOf="@id/ivFBShareIcon"
            android:layout_marginRight="15dp"

            app:srcCompat="@drawable/ic_twitter" />


        <ImageView
            android:id="@+id/ivEmailShareIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/ivFBShareIcon"
            android:layout_below="@id/ivSiteLink"
            app:srcCompat="@drawable/ic_email"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/ivTwitterShareIcon" />

        <ImageView
            android:id="@+id/ivMessageShareIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/ivSiteLink"
            android:layout_alignTop="@id/ivFBShareIcon"
            android:layout_toRightOf="@id/ivEmailShareIcon"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ic_whatsapp" />


        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_below="@id/ivFBShareIcon"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" />



    </RelativeLayout>
</layout>
