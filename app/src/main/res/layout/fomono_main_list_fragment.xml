<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:id="@+id/fomonoMainFragSmoothBarId"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@style/GPlusProgressBar"/>

        <ProgressBar
            android:id="@+id/fomonoMainFragProgressId"
            style="@style/ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:indeterminate="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fomonoMainFragRvId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|left"
            android:id="@+id/SearchParamDisplayTextId"
            android:textColor="@color/colorWhite"
            android:background="@color/colorFomono"
            android:textSize="@dimen/SearchPrefDisplayTextSize"
            android:layout_height="wrap_content" />

    </android.support.design.widget.CoordinatorLayout>
</layout>