<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvSortTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/FilterSortText"
            android:textSize="20sp"
            android:background="@color/colorWhite"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp" />

        <RadioGroup
            android:id="@+id/SortRadioGrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:background="@drawable/sort_radio_selector"
                android:button="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/colorBlack"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:gravity="left"
                android:textAllCaps="false"
                tools:text="top"
                android:id="@+id/SortButton1Id"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:background="@drawable/sort_radio_selector"
                android:button="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/colorBlack"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:gravity="left"
                android:textAllCaps="false"
                tools:text="best_match"
                android:id="@+id/SortButton2Id"
                />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:background="@drawable/sort_radio_selector"
                android:button="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/colorBlack"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:gravity="left"
                android:textAllCaps="false"
                tools:text="something"
                android:id="@+id/SortButton3Id"
                />

        </RadioGroup>

        <View android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorWhite" />

    </LinearLayout>
</layout>
